<body>

<h1 class="book">
  Editing Book
</h1>

<% if @book.errors.any? %>

<div class="errorbox">

 <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>

 <ul>
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>

 </div>

<% end %>


<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>




  <div class="box">
	<label>Title</label>
	<%= f.text_field :title %>
	</div>

	<div class="box">
	<label>Body</label>
	<%= f.text_area :body %>
	</div>

	<div class="action">
	<%= f.submit 'Update Book' %>
	</div>


<tr>
  <tb><%= link_to "Show", book_path(@book.id) %></tb>
  |
  <tb><%= link_to "Back", "/books" %></tb>
  <tb></tb>
</tr>

<% end %>

</body>